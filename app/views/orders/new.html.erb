  <%= order_form.check_box :declaration_france %>
</p>
<p>
  <%= order_form.label :declaration_uk, 'Großbritannien' %>
  <%= order_form.check_box :declaration_uk %>
</p>
<p>
  <%= order_form.label :declaration_other, 'Andere Länder' %>
  <%= order_form.check_box :declaration_other %>
</p>
<p>
  <%= order_form.label :confirmation, 'Ich bin mit der Mandatsvereinbarung
      einverstanden' %>
  <%= order_form.check_box :confirmation %>
</p>
<p>
  <%= order_form.submit 'Preis ermitteln', class: "btn btn-primary" %>
</p>
<% end %>
