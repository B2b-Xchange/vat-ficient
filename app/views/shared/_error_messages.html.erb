<% if @order.errors.any? %>
<div id="error-explanation">
  <div class="alert alert-danger">
    Das Formular enth√§lt Fehler.
  </div>
  <ul>
    <% @order.errors.full_messages.each do |msg| %>
    <% if !msg.include? "Addresses" %>
    <li><%= msg %></li>
    <% end %>
    <% end %>
  </ul>
  <ul>
    <% @order.addresses.each do |address| %>
    <% address.errors.full_messages.each do |msg| %>
    <li><%= (address.kind == 1 ? "Firmenanschrift:" : "Anschrift Verantwortlicher:") + " " + msg %></li>
    <% end %>
    <% end %>
</div>
<% end %>
